<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/cv_id"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="20dp"
    app:cardElevation="10dp"
    app:cardPreventCornerOverlap="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/fooditem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Food Item(s)"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_bold"/>

    <TextView
        android:id="@+id/fooditem_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Food Item(s) value"
        android:textSize="14sp"
        android:fontFamily="@font/roboto"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:background="@color/bg_divider"/>

    <TextView
        android:id="@+id/foodType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Food Type"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_bold"/>

    <TextView
        android:id="@+id/foodType_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Food type value"
        android:textSize="14sp"
        android:fontFamily="@font/roboto"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:background="@color/bg_divider"/>

    <TextView
        android:id="@+id/quan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quantity"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_bold"/>

    <TextView
        android:id="@+id/quan_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quantity value"
        android:textSize="14sp"
        android:fontFamily="@font/roboto"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:background="@color/bg_divider"/>

    <TextView
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone no."
        android:textSize="18sp"
        android:fontFamily="@font/roboto_bold"/>

    <TextView
        android:id="@+id/phone_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone no. value"
        android:textSize="14sp"
        android:fontFamily="@font/roboto"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:background="@color/bg_divider"/>

    <TextView
        android:id="@+id/paddr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pickup Address"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_bold"/>

    <TextView
        android:id="@+id/paddr_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pickup Address value"
        android:textSize="14sp"
        android:fontFamily="@font/roboto"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:background="@color/bg_divider"/>

    <TextView
        android:id="@+id/pdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pickup Date"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_bold"/>

    <TextView
        android:id="@+id/pdate_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pickup Date value"
        android:textSize="14sp"
        android:fontFamily="@font/roboto"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:background="@color/bg_divider"/>

    <TextView
        android:id="@+id/ptime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pickup Time"
        android:textSize="18sp"
        android:fontFamily="@font/roboto_bold"/>

    <TextView
        android:id="@+id/ptime_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pickup Time value"
        android:textSize="14sp"
        android:fontFamily="@font/roboto"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        />

    </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>